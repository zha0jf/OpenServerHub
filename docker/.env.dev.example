# 开发环境配置示例文件
# 复制此文件为 .env.dev 并根据需要修改配置

# 服务器IP地址配置
# 设置为您的开发机IP地址，这样您可以从其他设备访问服务
# 例如：SERVER_IP=192.168.1.100
SERVER_IP=0.0.0.0

# 前端API配置
# 前端将使用此地址连接后端API
REACT_APP_API_URL=http://0.0.0.0:8000
REACT_APP_WS_URL=ws://0.0.0.0:8000

# CORS配置
# 允许来自您的开发机的跨域请求
# 例如：CORS_ORIGINS=http://192.168.1.50:3000,http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://0.0.0.0:3000

# 数据库配置（开发环境使用SQLite）
DATABASE_URL=sqlite:///./data/openserverhub.db

# 应用配置
SECRET_KEY=your-secret-key-here-change-this-in-development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# IPMI配置
IPMI_TIMEOUT=10
IPMI_RETRY_COUNT=3
IPMI_CONCURRENT_LIMIT=25
IPMI_THREAD_POOL_SIZE=30
IPMI_PROCESS_POOL_SIZE=6

# 定时任务配置
SCHEDULER_ENABLED=true
POWER_STATE_REFRESH_INTERVAL=3
POWER_STATE_REFRESH_ENABLED=true
SCHEDULER_CONCURRENCY_LIMIT=15

# 监控配置
MONITORING_ENABLED=true
MONITORING_INTERVAL=5
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key-here
PROMETHEUS_TARGETS_PATH=/etc/prometheus/targets/ipmi-targets.json