# 数据库配置
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/openserverhub
POSTGRES_DB=openserverhub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis配置
REDIS_URL=redis://redis:6379/0

# 应用配置
SECRET_KEY=your-secret-key-here-change-this-in-production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://frontend:80

# IPMI配置
IPMI_TIMEOUT=30
IPMI_RETRY_COUNT=3

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090
GRAFANA_API_KEY=your-grafana-api-key-here
PROMETHEUS_TARGETS_PATH=/etc/prometheus/targets/ipmi-targets.json

# 定时任务配置
SCHEDULER_ENABLED=true
POWER_STATE_REFRESH_INTERVAL=60