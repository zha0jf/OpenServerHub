# OpenServerHub 生产环境配置文件 (SQLite版本)

# 服务器IP地址配置
# 设置为您的服务器IP地址，这样您可以从其他设备访问服务
# 例如：SERVER_IP=192.168.1.100
SERVER_IP=localhost

# 数据库配置
DATABASE_URL=sqlite:///./data/openserverhub.db

# 应用配置
PROJECT_NAME=OpenServerHub
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
TZ=Asia/Shanghai

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS配置
# 使用SERVER_IP变量动态设置，允许来自前端的跨域请求
CORS_ORIGINS=http://${SERVER_IP}:3000,http://localhost:3000,http://127.0.0.1:3000

# IPMI配置
IPMI_CONNECTION_POOL_SIZE=500
IPMI_TIMEOUT=30
IPMI_RETRY_COUNT=3

# 监控配置
MONITORING_ENABLED=true
MONITORING_INTERVAL=5
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key-here
PROMETHEUS_TARGETS_PATH=/etc/prometheus/targets/ipmi-targets.json

# 定时任务配置
POWER_STATE_REFRESH_INTERVAL=3
POWER_STATE_REFRESH_ENABLED=true
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log