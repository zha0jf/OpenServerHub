# 数据库配置
DATABASE_URL=sqlite:///./openshub.db

# 安全配置
SECRET_KEY=your-very-secret-key-here-please-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# 日志配置
LOG_LEVEL=INFO
DEBUG=false
LOG_FILE=logs/app.log

# IPMI配置
IPMI_TIMEOUT=10
IPMI_CONCURRENT_LIMIT=25
IPMI_THREAD_POOL_SIZE=30
IPMI_PROCESS_POOL_SIZE=6

# 定时任务配置
POWER_STATE_REFRESH_INTERVAL=3
POWER_STATE_REFRESH_ENABLED=true
SCHEDULER_CONCURRENCY_LIMIT=15

# 监控系统配置
MONITORING_ENABLED=true
MONITORING_INTERVAL=5
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key-here
PROMETHEUS_TARGETS_PATH=/etc/prometheus/targets/ipmi-targets.json